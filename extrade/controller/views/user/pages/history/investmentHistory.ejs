<%-include("../../partials/header");%>

<div class="container-xl">

    <h1 class="app-page-title"><%=title%></h1>

    <div class="tab-content" id="orders-table-tab-content">
        <div class="tab-pane fade show active" id="orders-all" role="tabpanel" aria-labelledby="orders-all-tab">
            <div class="app-card app-card-orders-table shadow-sm mb-5">
                <div class="app-card-body">
                    <div class="table-responsive">
                        <table class="table app-table-hover mb-0 text-left">
                            <thead>
                                <tr>
                                    <th class="cell">S/N</th>
                                    <th class="cell">Investment Name</th>
                                    <th class="cell">Start Date</th>
                                    <th class="cell">End Date</th>
                                    <th class="cell">Status</th>
                                    
                                </tr>
                            </thead>
                            <tbody>
                            <%userInvestments.map((ui,index) =>{%>

                            <tr>
                                <td class="cell">#<%=index + 1%></td>
                                <td class="cell"><%=ui.inv_plan_name%></td>
                                <td class="cell"><%=ui.inv_created%></td>
                                <td class="cell"><%=ui.plan_end_date%></td>
                                

                                <%if(ui.inv_status === 1) {%>
                                <td class="cell"><span class="badge bg-info">Running</span></td>

                                <%}else{%>

                                <td class="cell"><span class="badge bg-danger">Completed</span></td>

                                <%}%>
                            
                            </tr>

                            <%})%>
                            </tbody>
                        </table>
                    </div>
                    <!--//table-responsive-->
    
                </div>
                <!--//app-card-body-->
            </div>
            <!--//app-card-->
            <%-include("../../partials/pagination",{link:"/dashboard/history/investment"});%>
            <!--//app-pagination-->
    
        </div>
        <!--//tab-pane-->
    
        
    
  
        
    </div>
    
</div>

<%-include("../../partials/footer");%>