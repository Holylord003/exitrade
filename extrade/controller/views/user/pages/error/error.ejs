<html lang="en">

<head>

    <meta charset="utf-8">

    <title>
        <%= title %> | <%= webSettings.website_title %> - <%= webSettings.website_tagline %>
    </title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="<%= webSettings.website_description %>" name="description">
    <meta content="<%= webSettings.website_author %>" name="author">

    <link rel="shortcut icon" href="data:image/png;base64,<%= webSettings.website_favicon %>">

    <link rel="stylesheet" href="/css/bootstrap.css">
    <link href="/css/style.css" rel="stylesheet">
    <link href="/css/circular.css" rel="stylesheet">
    <style>
        .bg-light {
            height: 100vh;
        }
    </style>
</head>



<body>



    <div class="dashboard-main-wrapper p-0">



        <div class="bg-light text-center">
            <div class="container">
                <div class="row">
                    <div class="offset-xl-2 col-xl-8 offset-lg-2 col-lg-8 col-md-12 col-sm-12 col-12">
                        <div class="error-section">
                            <!-- <img src="../assets/images/error-img.png" alt="" class="img-fluid"> -->
                            <div class="error-section-content">
                                <h3 class="display-5">
                                    <%=title %>
                                </h3>
                                <p>
                                    <%=text%>
                                </p>
                                <a href="<%=button.link%>" class="btn btn-secondary btn-lg">
                                    <%=button.text%>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>



            <div class="bg-white p-3" style="position: absolute;bottom: 0;width: 100%;">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 text-dark text-center">
                            Copyright Â©
                            <script>document.write(new Date().getFullYear())</script>
                            . All rights reserved.
                        </div>
                    </div>
                </div>
            </div>









        </div>
    </div>


    <script src="/js/auth/login.js"></script>
    <script src="/js/sweetalert.js"></script>
    <script type="text/javascript" async="" src="https://www.google-analytics.com/analytics.js"></script>
    <script async="" src="https://www.googletagmanager.com/gtag/js?id=UA-23581568-13"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());

        gtag('config', 'UA-23581568-13');
    </script>

</body>

</html>