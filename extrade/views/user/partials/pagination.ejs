<nav class="app-pagination">
    <ul class="pagination justify-content-center">
<%if(currentPage> 1){%>

    <li class="page-item">
        <a class="page-link" href="<%=link%>?page=<%=currentPage - 1%>" tabindex="-1" aria-disabled="true">Previous</a>
    </li>

    <%}else{%>
    <li class="page-item disabled">
        <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Previous</a>
    </li>
    <%}%>

        <%let count=1; paginationArr.slice(currentPage - 1).map(p=>{%>

            <%if(count <=10){%>

                <%if(currentPage===p){%>

                    <li class="page-item active"><a class="page-link" href="#"><%=p%></a></li>

                    <%}else{%>

                        <li class="page-item"><a class="page-link" href="<%=link%>?page=<%=p%>"><%=p%></a></li>

                        <%}%>

                            <%}%>

                                <%count +=1%>

                                    <%})%>

                                        <%if(paginationArr[paginationArr.length -1] > currentPage){%>

                                            <li class="page-item"><a class="page-link" href="<%=link%>?page=<%=currentPage + 1%>">Next</a></li>

                                            <%}%>
    </ul></nav>