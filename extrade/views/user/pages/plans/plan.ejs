<%-include("../../partials/header");%>

<div class="container-xl">

    <h1 class="app-page-title"><%=title%></h1>

    <div class="row g-4">
        <%plans.map((pl,index) =>{%>

        <div class="col-6 col-xm-12 col-md-4 col-xl-3 col-xxl-2">
            <div class="app-card app-card-doc shadow-sm h-100">
                
                <div class="app-card-body p-3 has-card-actions">
        
                    <h4 class="app-doc-title truncate mb-0"><a href="javascript:void(0)"><%=pl.plan_name%></a></h4>
                    <div class="app-doc-meta">
                        <ul class="list-unstyled mb-0">
                            <li><span class="text-muted">Price:</span> <%=webSettings.website_currency + pl.plan_price%></li>
                            <li><span class="text-muted">Duration:</span> <%=pl.plan_duration%> Days</li>
                            <li><span class="text-muted">ROI:</span> <%=pl.plan_roi%>% </li>
                            <li><span class="text-muted">Referral Percentage:</span> <%=pl.plan_referral%>%</li>
                            <li><span class="text-muted">Withdrawal:</span> <%=pl.plan_withdrawal_segment%> times in <%=pl.plan_duration%> days</li>
                        </ul>
                    </div>
                
        
                    <%if(user.investment_plan_id === pl.id){%>
                    <a class="btn app-btn-primary mt-3" data-toggle="modal" data-target="#plan-<%=index%>" href="#">
                        <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" class="bi bi-person-check"
                            viewBox="0 0 16 16">
                            <path
                                d="M6 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H1s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C9.516 10.68 8.289 10 6 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z" />
                            <path fill-rule="evenodd"
                                d="M15.854 5.146a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 0 1 .708-.708L12.5 7.793l2.646-2.647a.5.5 0 0 1 .708 0z" />
                        </svg> Invest Now</a>

                    <%}else{%>

                    <%if(user.investment_status === "active"){%>
                    <a class="btn app-btn-primary mt-3 disabled" data-toggle="modal" data-target="#plan-<%=index%>" href="#">
                        <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor"
                            class="bi bi-graph-up mr-2">
                            <path fill-rule="evenodd"
                                d="M0 0h1v15h15v1H0V0zm10 3.5a.5.5 0 0 1 .5-.5h4a.5.5 0 0 1 .5.5v4a.5.5 0 0 1-1 0V4.9l-3.613 4.417a.5.5 0 0 1-.74.037L7.06 6.767l-3.656 5.027a.5.5 0 0 1-.808-.588l4-5.5a.5.5 0 0 1 .758-.06l2.609 2.61L13.445 4H10.5a.5.5 0 0 1-.5-.5z">
                            </path>
                        </svg> Invest Now</a>
                    <%}else{%>
                    <a class="btn app-btn-primary mt-3" data-toggle="modal" data-target="#plan-<%=index%>" href="#">
                        <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor"
                            class="bi bi-graph-up mr-2">
                            <path fill-rule="evenodd"
                                d="M0 0h1v15h15v1H0V0zm10 3.5a.5.5 0 0 1 .5-.5h4a.5.5 0 0 1 .5.5v4a.5.5 0 0 1-1 0V4.9l-3.613 4.417a.5.5 0 0 1-.74.037L7.06 6.767l-3.656 5.027a.5.5 0 0 1-.808-.588l4-5.5a.5.5 0 0 1 .758-.06l2.609 2.61L13.445 4H10.5a.5.5 0 0 1-.5-.5z">
                            </path>
                        </svg> Invest Now</a>
                    <%}%>

                    <%}%>
        
                </div>
                <!--//app-card-body-->
        
            </div>
            <!--//app-card-->
        </div>
        <%-include("./modal",{plan:pl,index})%>
        <%})%>
    </div>
</div>

<!-- Script -->
<script src="/js/user/plans.js"></script>

<%-include("../../partials/footer");%>