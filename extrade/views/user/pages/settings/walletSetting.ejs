<%-include("../../partials/header");%>

<div class="container-xl">

    <h1 class="app-page-title">
        <%=title%>
    </h1>

<div class="app-card app-card-settings shadow-sm p-4">

    <div class="app-card-body">
        <%if(wallets){%>
        <form id="edit_wallet">
            
            <div class="mb-3">
                <label for="name" class="form-label">Bank Account Name</label>
                <input type="text" class="form-control" id="name" value="<%=wallets.wallet_bank_name%>" required="">
            </div>
            
            <div class="mb-3">
                <label for="number" class="form-label">Bank Account Number</label>
                <input type="text" class="form-control" id="number" value="<%=wallets.wallet_bank_number%>" required="">
            </div>
            
            <div class="mb-3">
                <label for="bank_type" class="form-label">Bank Type</label>
                <select id="bank_type" class="form-select">
                    <option value="">Select your bank</option>
                    <%banks.map(bk =>{%>
                    <%if(bk.name === wallets.wallet_bank_type){%>
                    <option selected="" value="<%=bk.code%>">
                        <%=bk.name%>
                    </option>
                    <%}else{%>
                    <option value="<%=bk.code%>">
                        <%=bk.name%>
                    </option>
                    <%}%>
                    <%})%>
                </select>
            </div>
            
        
            <button type="submit" class="btn app-btn-primary">Save Changes</button>
        </form>
        <%}else{%>
        
        <div class="text-center mt-4">
            <h5 class="pb-5">You Have No Wallet At The Moment</h5>
            <a data-toggle="modal" data-target="#new" class="btn app-btn-secondary" href="javascript:void(0)">Create Wallet</a></div>
        <%}%>
    </div>
    <!--//app-card-body-->

</div>

</div>




<div class="modal fade" id="new" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    style="display: none;" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Setup Bank Wallet</h5>
                <a href="#" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">Ã—</span>
                </a>
            </div>
            <div class="modal-body">
                <div class="card">
                    <div class="card-body">
                        
                        <form id="new_wallet">

            

            <div class="mb-3">
                <label for="number" class="form-label">Bank Account Number</label>
                <input type="text" class="form-control" id="number" placeholder="your bank account number" required="">
            </div>
            
            <div class="mb-3">
                <label for="bank_type" class="form-label">Bank Type</label>
                <select id="bank_type" class="form-select">
                    <option value="">Select your bank</option>
                    <%banks.map(bk =>{%>
                    <option value="<%=bk.code%>"><%=bk.name%></option>
                    <%})%>
                </select>
            </div>
        
            <button type="submit" class="btn app-btn-primary">Create Wallet</button>
        </form>

                    </div> <!-- end card-body-->
                </div> <!-- end card-->
            </div>

        </div>
    </div>
</div>

<script src="/api/static?filePath=js/user/wallet.js"></script>
<%-include("../../partials/footer");%>