<%- include('../partials/header'); %>

<section class="blog-list-section py-5">
    <div class="container">
        <h2 class="section-title text-center mb-5">
            <%=title%>
        </h2>

        <div class="search-form-section text-center pt-5 pb-5">
            <div class="container">
                <div class="search-form-wrapper mx-auto d-inline-block">
                    <form class="form-inline search-form" action="/blog" method="get">
                        <input type="text" placeholder="Search blog post" name="search" class="form-control search-input mr-2">
                        <button type="submit" class="btn btn-gradient" value="Search"><svg
                                class="svg-inline--fa fa-search fa-w-16" aria-hidden="true" focusable="false" data-prefix="fa"
                                data-icon="search" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"
                                data-fa-i2svg="">
                                <path fill="currentColor"
                                    d="M505 442.7L405.3 343c-4.5-4.5-10.6-7-17-7H372c27.6-35.3 44-79.7 44-128C416 93.1 322.9 0 208 0S0 93.1 0 208s93.1 208 208 208c48.3 0 92.7-16.4 128-44v16.3c0 6.4 2.5 12.5 7 17l99.7 99.7c9.4 9.4 24.6 9.4 33.9 0l28.3-28.3c9.4-9.4 9.4-24.6.1-34zM208 336c-70.7 0-128-57.2-128-128 0-70.7 57.2-128 128-128 70.7 0 128 57.2 128 128 0 70.7-57.2 128-128 128z">
                                </path>
                            </svg><!-- <i class="fa fa-search"></i> Font Awesome fontawesome.com --></button>
                    </form>
                    <!--//search-form-->
                </div>
                <!--//mx-auto-->
            </div>
            <!--//container-->
        </div>

        <div class="row">


        <%posts.map(pt =>{%>
        <div class="col-12 col-lg-4 mb-5">
            <div class="post-item shadow">
                <a class="post-link" href="/post/<%=pt.post_slug%>">
                    <div class="post-thumb-holder">
                        <%if(pt.post_image){%>
                        <img class="img-fluid" src="data:image/png;base64,<%=pt.post_image %>" alt="<%=pt.post_title%>">
                        <%}else{%>
                        <img class="img-fluid" src="/api/static?filePath=img/thumbnail.jpg" alt="<%=pt.post_title%>">
                        <%}%>
                    </div>
                    <!--//post-thumb-holder-->
                    <div class="post-content-holder p-4">
                        <div class="post-type mb-2"><span><i class="fa fa-calendar" aria-hidden="true"></i>

                            <%=pt.created_at%>
                        </span><span
                                class="px-2">|</span><span><i class="fa fa-eye" aria-hidden="true"></i> <%=pt.post_views%></span></div>
                        <!--//post-type-->
                        <h5 class="post-title"><%=pt.post_title%></h5>
                        
                        <!--//post-excerpt-->
                        
                    </div>
                    <!--//post-excerpt-->
                </a>
                <!--//post-link-->
            </div>
            <!--//item-->
        </div>
        <%})%>


        </div>
        <!--//row-->

        <nav class="pagination-container text-center ">
            <%if(search){%>
            <%- include('../partials/pagination',{url:'/blog?search='+search+'&'}); %>
            <%}else{%>
            <%- include('../partials/pagination',{paginationArr,currentPage,url:'/blog?'}); %>
            <%}%>
        </nav>

    </div>
    <!--//container-->
</section>





<%- include('../partials/footer'); %>