<%- include('../partials/header'); %>

<section class="blog-post-header page-header py-3 py-md-5 over-curve">
    <div class="container pt-md-3">
        <div class="mb-3"><a href="/blog">‚Üê Back to blog home</a></div>
        <div class="single-col-max mx-auto">
            <h1 class="post-title text-center mb-3"><%=post.post_title%></h1>
            <div class="post-meta text-center mb-4">
                <span class="post-time"><i class="fa fa-calendar" aria-hidden="true"></i> <%=post.created_at%></span>
                <span class="px-2">|</span>
                <span class="post-length"><i class="fa fa-eye" aria-hidden="true"></i> <%=post.post_views%></span>
                <span class="px-2">|</span>
                <span class="post-length"><i class="fa fa-database" aria-hidden="true"></i> <%=post.post_id%> </span>
                
            </div>
            <!--//post-meta-->

            <%if(post.post_image){%>
            <div class="post-banner-holder">
                <img class="img-fluid shadow rounded" src="data:image/png;base64,<%=post.post_image %>" alt="<%=post.post_title%>">
            </div>
            <%}%>
            <!--//post-banner-->
        </div>
        <!--//single-col-max-->
    </div>
    <!--//container-->
</section>


<div class="blog-post-content py-5">
