<section class="related-posts-section py-5 theme-bg-light">
    <div class="container">
        <h2 class="section-title text-center mb-5">Related Posts</h2>
        <div class="row">
            
                <%related.map(pt=>{%>
                <div class="col-12 col-lg-4 mb-5">
                <div class="post-item shadow">
                    <a class="post-link" href="/post/<%=pt.post_slug%>">
                        <div class="post-thumb-holder">
                            <%if(pt.post_image){%>
                                <img class="img-fluid" src="data:image/png;base64,<%=pt.post_image %>" alt="<%=pt.post_title%>">
                                <%}else{%>
                                    <img class="img-fluid" src="/api/static?filePath=img/thumbnail.jpg" alt="<%=pt.post_title%>">
                                    <%}%>
                        </div>
                        <!--//post-thumb-holder-->
                        <div class="post-content-holder p-4">
                            <div class="post-type mb-2"><span><i class="fa fa-calendar" aria-hidden="true"></i>
                
                                    <%=pt.created_at%>
                                </span><span class="px-2">|</span><span><i class="fa fa-eye" aria-hidden="true"></i>
                                    <%=pt.post_views%>
                                </span></div>
                            <!--//post-type-->
                            <h5 class="post-title">
                                <%=pt.post_title%>
                            </h5>
                
                            <!--//post-excerpt-->
                
                        </div>
                        <!--//post-excerpt-->
                    </a>
                    <!--//post-link-->
                </div>
                <!--//item-->
                </div>
                <!--//col-->
                <%})%>
            
        </div>
        <!--//row-->
    </div>
    <!--//container-->
</section>

