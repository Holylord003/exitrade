<%-include('../../partials/header'); %>



    <div class="container-fluid dashboard-content">

        <!-- start page title -->
        <div class="row">
            <div class="col-12">
                <div class="page-title-box">
                    <h4 class="page-title">
                        <%= title %>
                    </h4>
                </div>
            </div>
        </div>
        <!-- end page title -->

        <div class="row">
            <div class="col-12">



                <div class="card">
                    <div class="card-body">


                        <form id="inserter">
                            
                            <div class="form-group">
                                <label for="payment">Header Code Inserter</label>
                                <textarea id="header" name="editordata" class="form-control" rows="20"
                                    spellcheck="true"><%=webSettings.website_header_code %></textarea>
                            </div>
                            
                            
                            <div class="form-group">
                                <label for="payment">Footer Code Inserter</label>
                                <textarea id="footer" name="editordata" class="form-control" rows="20"
                                    spellcheck="true"><%=webSettings.website_footer_code %></textarea>
                            </div>
                            
                            <button type="submit" id="submit-btn"
                                class="btn btn-primary waves-effect waves-light">Save Setting!</button>
                        </form>

                    </div> <!-- end card-body-->
                </div> <!-- end card-->




            </div><!-- end col-->
        </div>
    </div>

    <script src="/js/admin/settings/inserter.js"></script>
    <%- include('../../partials/footer'); %>