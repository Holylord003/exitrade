<%- include('../../partials/header'); %>


    <div class="container-fluid dashboard-content">

        <!-- start page title -->
        <div class="row">
            <div class="col-12">
                <div class="page-title-box">
                    <h4 class="page-title">
                        <%= title %>
                    </h4>
                </div>
            </div>
        </div>
        <!-- end page title -->

        <div class="row">
            <div class="col-12">



                <div class="card">
                    <div class="card-body">


                        <form id="settings">
                            <div class="form-group">
                                <label for="title">Website Title</label>
                                <input type="text" class="form-control" id="title" aria-describedby="title" name="website_title" value="<%=webSettings.website_title %>" required>
                            </div>

                            <div class="form-group">
                                <label for="tagline">Website Tagline</label>
                                <input type="text" class="form-control" id="tagline" aria-describedby="tagline" value="<%=webSettings.website_tagline %>" required>
                            </div>

                            <div class="form-group">
                                <label for="url">Website Url</label>
                                <input type="url" class="form-control" id="url" aria-describedby="url" value="<%=webSettings.website_url %>" required>
                            </div>

                            
                            <div class="form-group">
                                <label for="description">Website Description (Max - 160 Words)</label>
                                <textarea id="description" name="editordata" class="form-control" rows="3"
                                    spellcheck="true"><%=webSettings.website_description %></textarea>
                            </div>

                            <div class="form-group">
                                <label for="number">Website Phone Number</label>
                                <input type="number" class="form-control" id="number" aria-describedby="number" value="<%=webSettings.website_phone_number %>" required>
                            </div>
                            
                            <div class="form-group">
                                <label for="number">Website Address</label>
                                <input type="text" class="form-control" id="address" aria-describedby="address" value="<%=webSettings.website_address %>" required>
                            </div>

                            <div class="form-group">
                                <label for="email">Website Email</label>
                                <input type="email" class="form-control" id="email" aria-describedby="email" value="<%=webSettings.website_email %>" required>
                            </div>

                            <div class="form-group">
                                <label for="author">Website Author Name</label>
                                <input type="text" class="form-control" id="author" aria-describedby="author" value="<%=webSettings.website_author %>" required>
                            </div>

                            <div class="form-group">
                                <label for="facebook">Website Facebook Handle</label>
                                <input type="text" class="form-control" id="facebook" aria-describedby="facebook" value="<%=webSettings.website_facebook %>" required>
                            </div>

                            <div class="form-group">
                                <label for="twitter">Website Twitter Handle</label>
                                <input type="text" class="form-control" id="twitter" aria-describedby="twitter" value="<%=webSettings.website_twitter %>" required>
                            </div>

                            <div class="form-group">
                                <label for="instagram">Website Instagram Handle</label>
                                <input type="text" class="form-control" id="instagram" aria-describedby="instagram" value="<%=webSettings.website_instagram %>" required>
                            </div>

                            <div class="form-group">
                                <label for="youtube">Website Youtube Handle</label>
                                <input type="text" class="form-control" id="youtube" aria-describedby="youtube" value="<%=webSettings.website_youtube %>" required>
                            </div>

                            <div class="form-group">
                                <label for="currency">Website Currency Sign</label>
                                <input type="text" class="form-control" id="currency" aria-describedby="currency" value="<%=webSettings.website_currency %>" required>
                            </div>


                            <br>

                            <div class="form-group">
                                <img id="logo" src="data:image/png;base64,<%= webSettings.website_logo %>" alt="image"
                                    class="img-fluid rounded-circle img-thumbnail avatar-preview"
                                    style="width: 100px;height: 100px;object-fit: cover;">
                            </div>


                            <div class="form-group">
                                <label for="logo">Website Logo</label>
                                <input type="file" class="form-control" id="logo">
                            </div>

                            <br>

                            <div class="form-group">
                                <img id="favicon" src="data:image/png;base64,<%= webSettings.website_favicon %>" alt="image"
                                    class="img-fluid rounded-circle img-thumbnail avatar-preview"
                                    style="width: 100px;height: 100px;object-fit: cover;">
                            </div>
                            
                            
                            <div class="form-group">
                                <label for="logo">Website Favicon</label>
                                <input type="file" class="form-control" id="favicon">
                            </div>


                            <button type="submit" id="submit-btn"
                                class="btn btn-primary waves-effect waves-light">Save Setting!</button>
                        </form>

                    </div> <!-- end card-body-->
                </div> <!-- end card-->




            </div><!-- end col-->
        </div>
    </div>

    <script src="/js/admin/settings/settings.js"></script>
    <%- include('../../partials/footer'); %>