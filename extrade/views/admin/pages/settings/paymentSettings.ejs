    <div class="container-fluid dashboard-content">

        <!-- start page title -->
        <div class="row">
            <div class="col-12">
                <div class="page-title-box">
                    <h4 class="page-title">
                        <%= title %>
                    </h4>
                </div>
            </div>
        </div>
        <!-- end page title -->

        <div class="row">
            <div class="col-12">



                <div class="card">
                    <div class="card-body">


                        <form id="settings">
                            
                            <div class="form-group">
                                <label for="paystack_pub">Paystack Public</label>
                                <input type="text" class="form-control" id="paystack_pub" aria-describedby="paystack_pub" name="paystack_pub" value="<%=webSettings.website_paystack_public %>"
                                    required="">
                            </div>

                            <div class="form-group">
                                <label for="paystack_sec">Paystack Secret</label>
                                <input type="text" class="form-control" id="paystack_sec" aria-describedby="paystack_sec" name="paystack_sec" value="<%=webSettings.website_paystack_secret %>"
                                    required="">
                            </div>

                           
                            

                            <button type="submit" id="submit-btn"
                                class="btn btn-primary waves-effect waves-light">Save Setting!</button>
                        </form>

                    </div> <!-- end card-body-->
                </div> <!-- end card-->




            </div><!-- end col-->
        </div>
    </div>

    <script src="/js/admin/settings/payment.js"></script>
