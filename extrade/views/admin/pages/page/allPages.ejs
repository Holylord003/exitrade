<%- include('../../partials/header'); %>




    <div class="container-fluid dashboard-content">

        <!-- start page title -->
        <div class="row">
            <div class="col-12">
                <div class="page-title-box">
                    <h4 class="page-title">
                        <%= title %>
                    </h4>
                </div>
            </div>
        </div>
        <!-- end page title -->


        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="card">



                    <div class="card-body p-0">
                        <%if(pages.length> 0){ %>
                            <div class="table-responsive">
                                <table class="table">
                                    <thead class="bg-light">
                                        <tr class="border-0">
                                            <th class="border-0">#</th>
                                            <th class="border-0">Title</th>
                                            <th class="border-0">Slug</th>
                                            <th class="border-0">Created</th>
                                            <th class="border-0">Actions</th>


                                        </tr>
                                    </thead>
                                    <tbody>
                                        <%pages.map((pg,index)=>{ %>
                                            <tr>
                                                <td>
                                                    <%=pg.page_id %>
                                                </td>

                                                <td>
                                                    <%=pg.page_title %>
                                                </td>

                                                <td>
                                                    <div class="form-group">
                                                        <input type="text" name="" value="<%=pg.page_slug %>">
                                                    </div>
                                                </td>

                                                <td>
                                                    <%=pg.page_created %>
                                                </td>

                                            

                                                <td>
                                                    <a href="/page/<%=pg.page_slug %>" class="btn btn-xs btn-success ml-1 view"><i class="fa fa-eye"
                                                            aria-hidden="true"></i></a>

                                                    <a href="/admin/page/edit/<%=pg.page_id %>"
                                                        class="btn btn-xs btn-info ml-1"><i
                                                            class="fa fa-pencil" aria-hidden="true"></i></a>

                                                    <a data-id="<%=pg.page_id %>" href="javascript: void(0);"
                                                        class="btn btn-xs btn-danger ml-1 delete-one"><i
                                                            class="fa fa-trash" aria-hidden="true"></i></a>


                                                </td>




                                            </tr>


                                            <% }) %>

                                                <tr>
                                                    <td colspan="9"></td>
                                                </tr>
                                    </tbody>

                                </table>
                                
                                <%-include("../../partials/pagination");%>


                                





                            </div>
                            <% }else{%>
                                <h3 class="text-center pt-3">Empty Result</h3>
                                <%}%>
                    </div>
                </div>
            </div>
        </div>




    </div>








    <script src="/api/static?filePath=js/admin/page/allPages.js"></script>
    <%- include('../../partials/footer'); %>