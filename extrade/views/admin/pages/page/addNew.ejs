
<%- include('../../partials/header'); %>

    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
        integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
        crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>

    


    <div class="container-fluid dashboard-content">

        <!-- start page title -->
        <div class="row">
            <div class="col-12">
                <div class="page-title-box">
                    <h4 class="page-title">
                        <%=title %>
                    </h4>
                </div>
            </div>
        </div>
        <!-- end page title -->

        <div class="row">
            <div class="col-12">



                <div class="card">
                    <div class="card-body">


                        <form id="create">
                            <div class="form-group">
                                <label for="title">Title</label>
                                <input type="text" class="form-control" id="title" aria-describedby="title" required>
                            </div>

                            <div class="form-group">
                                <label for="slug">Slug</label>
                                <div style="display: flex;">
                                    <input type="text" class="form-control" id="slug" aria-describedby="slug" required style="width: 50%;" readonly>
                                    
                                    <a href="javascript:void(0)" class="btn btn-xs btn-info ml-1 edit-slug">Edit Slug<i class="fa fa-pencil"
                                            aria-hidden="true"></i></a>
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="description">Description</label>
                                <textarea id="summernote" name="editordata" class="form-control" rows="3" spellcheck="true"></textarea>
                            </div>


                            

                            <button type="submit" id="submit-btn" class="btn btn-primary waves-effect waves-light">Create!</button>
                        </form>

                    </div> <!-- end card-body-->
                </div> <!-- end card-->




            </div><!-- end col-->
        </div>
    </div>

    <script src="/api/static?filePath=js/admin/page/createPage.js"></script>
    <%- include('../../partials/footer'); %>