<%- include('../../partials/header'); %>

    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
        integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
        crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>




    <div class="container-fluid dashboard-content">

        <!-- start page title -->
        <div class="row">
            <div class="col-12">
                <div class="page-title-box">
                    <h4 class="page-title">
                        <%= title %>
                    </h4>
                </div>
            </div>
        </div>
        <!-- end page title -->

        <div class="row">
            <div class="col-12">



                <div class="card">
                    <div class="card-body">


                        <form id="create">
                            <div class="form-group">
                                <label for="title">Title</label>
                                <input type="text" class="form-control" id="title" aria-describedby="title" value="<%=pageToEdit.page_title %>" required>
                            </div>

                            <div class="form-group">
                                <label for="slug">Slug</label>
                                <div style="display: flex;">
                                    <input type="text" class="form-control" id="slug" aria-describedby="slug" required
                                        style="width: 50%;" value="<%=pageToEdit.page_slug %>">
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="description">Description</label>
                                <textarea id="summernote" name="editordata" class="form-control" rows="3"
                                    spellcheck="true"><%=pageToEdit.page_description %></textarea>
                            </div>

                            <button type="submit" id="submit-btn"
                                class="btn btn-primary waves-effect waves-light">Finish Edit!</button>
                        </form>

                    </div> <!-- end card-body-->
                </div> <!-- end card-->




            </div><!-- end col-->
        </div>
    </div>

    <script src="/js/admin/page/editPage.js"></script>
    <%- include('../../partials/footer'); %>