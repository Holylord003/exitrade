<%-include("../../partials/header");%>

    <div class="container-fluid dashboard-content">

        <!-- start page title -->
        <div class="row">
            <div class="col-12">
                <div class="page-title-box">
                    <h4 class="page-title">
                        <%= title %>
                    </h4>
                </div>
            </div>
        </div>
        <!-- end page title -->


        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="card">
                    
                    <div class="card-body p-0">
                        <%if(orders.length){ %>
                            <div class="table-responsive">
                                <table class="table">
                                    <thead class="bg-light">
                                        <tr class="border-0">
                                            <th class="border-0">#</th>
                                            <th class="border-0">Username</th>
                                            <th class="border-0">Plan Name</th>
                                            <th class="border-0">Plan Price</th>
        
                                            <th class="border-0">Start Date</th>
                                            <th class="border-0">End Date</th>
                                            <th class="border-0">Status</th>
        
        
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <%orders.map((od,index)=>{ %>
                                            <tr>
                                                <td>
                                                    <%=index + 1 %>
                                                </td>
        
                                                <td>
                                                    <%=od.username %>
                                                </td>
        
                                                <td>
                                                    <%=od.plan_name %>
                                                </td>
                                                <td>
                                                    <%=webSettings.website_currency + od.plan_price.toLocaleString() %>
                                                </td>
        
        
                                                <td>
                                                    <%=od.order_created %>
                                                </td>
                                                <td>
                                                    <%=od.order_end %>
                                                </td>
        
                                                <td>
                                                    <%if(od.order_status){%>
                                                    <a href="javascript: void(0);" class="btn btn-xs btn-success ml-1">Active</a>
                                                    <%}else{%>
                                                    <a href="javascript: void(0);" class="btn btn-xs btn-danger ml-1"><%=od.investment_status%></a>
                                                    <%}%>
                                                </td>
        
        
        
        
                                            </tr>
                                            <% }) %>
        
                                                <tr>
                                                    <td colspan="9"></td>
                                                </tr>
                                    </tbody>
        
                                </table>
                                <%-include("../../partials/pagination");%>
        
        
        
        
        
                            </div>
                            <% }else{%>
                                <h3 class="text-center pt-3">No Active/Pending Investment At The Moment</h3>
                                <%}%>
                    </div>
                </div>
            </div>
        </div>



    </div>

    <script src="/api/static?filePath=js/admin/orders/ordersList.js"></script>
    <%-include("../../partials/footer");%>